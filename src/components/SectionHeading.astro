---
import Link from "./Link.astro";

const { headingText, headingLinkText, headingLinkPath } = Astro.props;
---

<div class="flex items-center justify-between mb-4">
    <h4 class="text-base md:text-lg font-semibold text-foreground tracking-wide">{headingText}</h4>
    {
        headingLinkPath && (
            <Link
                href={headingLinkPath}
                underline
                class="text-subContent hover:text-foreground tracking-tight text-sm md:text-base"
            >
                {headingLinkText}
            </Link>
        )
    }
</div>
