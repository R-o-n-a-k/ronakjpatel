---
const { href, external, hover = false, underline=false, class: className = '', ...rest } = Astro.props;
---

<a
  href={href}
  class={`
    inline-block text-foreground transition-animation decoration-black/25 dark:decoration-white/50
    ${hover ? "hover:underline hover:underline-offset-2" : ""}
    ${underline ? "underline underline-offset-2" : ""}
    ${className}
  `}
  target={external ? "_blank" : "_self"}
  {...rest}
>
  <slot />
</a>