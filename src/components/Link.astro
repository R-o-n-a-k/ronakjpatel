---
const { href, external, hover = false, underline=false, class: className = '', ...rest } = Astro.props;
---

<a
  href={href}
  class={`
    inline-block text-foreground transition-animation decoration-subContent/40 dark:decoration-subContent/75
    ${hover ? "hover:underline hover:underline-offset-2" : ""}
    ${underline ? "underline underline-offset-2" : ""}
    ${className}
  `}
  target={external ? "_blank" : "_self"}
  {...rest}
>
  <slot />
</a>